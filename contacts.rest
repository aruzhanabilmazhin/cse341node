### =========================
### GET all contacts
### =========================
GET http://localhost:3000/contacts
Accept: application/json


### =========================
### CREATE a new contact
### =========================
POST http://localhost:3000/contacts
Content-Type: application/json

{
  "firstName": "Alice",
  "lastName": "Johnson",
  "email": "alice@example.com",
  "favoriteColor": "Blue",
  "birthday": "2001-05-12"
}


### =========================
### GET a contact by ID
### (replace ID with one returned from POST)
### =========================
GET http://localhost:3000/contacts/6870a4b218d6a3ee4c659db7
Accept: application/json


### =========================
### UPDATE a contact
### =========================
PUT http://localhost:3000/contacts/6870a4c318d6a3ee4c659db8
Content-Type: application/json

{
  "firstName": "Alice",
  "lastName": "Smith",
  "email": "alice.smith@example.com",
  "favoriteColor": "Green",
  "birthday": "2001-05-12"
}


